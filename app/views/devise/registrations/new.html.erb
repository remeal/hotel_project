<section class="hero is-primary is-fullheight-with-navbar">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "decor") do |f| %>
  <div class="form-inner column is-3 is-offset-4">
    <h3>Регистрация</h3>
  <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <label class="label column is is-4 is-offset-1">
    <%= f.label :name %><br /></label>
    <%= f.text_field :name, autofocus: true, class: "column is is-10 is-offset-1" %>
  </div>

  <div class="field">
    <label class="label column is is-4 is-offset-1">
      <%= f.label :email %><br /></label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "column is is-10 is-offset-1" %>
  </div>

  <div class="field">
    <label class="label column is is-11 is-offset-1">
      <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br /></label>
    <%= f.password_field :password, autocomplete: "new-password", class: "column is is-10 is-offset-1" %>
  </div>

  <div class="field">
    <label class="label column is is-11 is-offset-1">
      <%= f.label :password_confirmation %><br /></label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "column is is-10 is-offset-1" %>
  </div>

  <div class="actions">
    <%= f.submit "Регистрация", class: "button is-info is-rounded column is is-10 is-offset-1" %>
  </div>
<% end %>
</div>
</section>

<%= render "devise/shared/links" %>
