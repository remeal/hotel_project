<body>

<%= form_tag(success_to_add_path, :method => "get", class: "success")  do%>
  <%for i in 1..@booking %>
  <div class="field">
    Фамилия
    <%= text_field_tag :surname.to_s + i.to_s%>
  </div>

  <div class="field">
    Имя
    <%= text_field_tag :name.to_s + i.to_s%>
  </div>

  <div class="field">
    Отчество
    <%= text_field_tag :patronymic.to_s + i.to_s%>
  </div>

  <div class="field">
    Номер паспорта
    <%= number_field_tag :passport.to_s + i.to_s%>
  </div>
  <% end %>
  <%= button_tag("Зарегистрировать", name: "type_value", value: [ @booking] ) %>
  <% end %>

</body>